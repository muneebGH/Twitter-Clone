    <div class="container-fluid gedf-wrapper">
      <div class="row">
        <div class="col-md-3">
          <div class="card">
            <div class="card-body">
              <div class="h5"><%=userDetails.name%></div>
              <div class="h7 text-muted">Fullname : <%=userDetails.fullname%></div>
              <div class="h7">
                Description : <%=userDetails.desc%>
              </div>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <div class="h6 text-muted">Followers</div>
                <div class="h5"><%=userDetails.followersCount%></div>
              </li>
              <li class="list-group-item">
                <div class="h6 text-muted">Following</div>
                <div class="h5"><%=userDetails.followingsCount%></div>
              </li>
              <li class="list-group-item"><%=userDetails.accountType%></li>
            </ul>
          </div>
        </div>
        <div class="col-md-6 gedf-main">




          <!--- \\\\\\\Post-->
        <form action="/home/storeTweet" method="GET">
          <div class="card gedf-card">
            <div class="card-header">
              <ul
                class="nav nav-tabs card-header-tabs"
                id="myTab"
                role="tablist"
              >
                <li class="nav-item">
                  <a
                    class="nav-link active"
                    id="posts-tab"
                    data-toggle="tab"
                    href="#posts"
                    role="tab"
                    aria-controls="posts"
                    aria-selected="true"
                    >New Tweet</a
                  >
                </li>
                
                </li>
              </ul>
            </div>
            <div class="card-body">
              <div class="tab-content" id="myTabContent">
                <div
                  class="tab-pane fade show active"
                  id="posts"
                  role="tabpanel"
                  aria-labelledby="posts-tab"
                >
                  <div class="form-group">
                    <label class="sr-only" for="message">post</label>
                    <textarea
                      name="newTweet"
                      class="form-control"
                      id="message"
                      rows="3"
                      placeholder="What are you thinking?"
                      maxlength="280"
                    ></textarea>
                  </div>
                </div>
                <div
                  class="tab-pane fade"
                  id="images"
                  role="tabpanel"
                  aria-labelledby="images-tab"
                >
                  <div class="form-group">
                    <div class="custom-file">
                      <input
                        type="file"
                        class="custom-file-input"
                        id="customFile"
                      />
                      <label class="custom-file-label" for="customFile"
                        >Upload image</label
                      >
                    </div>
                  </div>
                  <div class="py-4"></div>
                </div>
              </div>
              <div class="btn-toolbar justify-content-between">
                <div class="btn-group">
                  <button type="submit" class="btn btn-primary">share</button>
                </div>
              </div>
            </div>
          </div>
        </form>
        
        







          <!--- \\\\\\\Post-->
          <% for (var i =0; i < tweets.length;  i++ ) {%>        
          <div class="card gedf-card">
