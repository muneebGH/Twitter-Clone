                    <img
                      class="rounded-circle"
                      width="45"
                      src="https://picsum.photos/50/50"
                      alt=""
                    />
                  </div>
                  <div class="ml-2">
                    <div class="h5 m-0"><%=tweets[i].username%></div>
                    <div class="h7 text-muted"><%=tweets[i].fullname%></div>
                  </div>
                </div>
                <div>
                 
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="text-muted h7 mb-2">
                <i class="fa fa-clock-o"><%=(tweets[i].time).toString().substring(0, (tweets[i].time).toString().length - 34)%></i>
